<div class="container" style="border: 1px solid black ; margin:10% auto; border-radius:10px">
	<form style="padding:15px 35px;" action="/<%= editing %>/<%= book._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
		 <div class="form-group row">
    		<label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
			<div class="col">
    			<input required type="text" name="title" class="form-control" id="inputTitle" placeholder="Title" value="<%= book.title %>">
			 </div>
  		</div>
		<% if(editing != 'misc') { %>
  		<div class="form-group row">
    		<label for="inputAuthor" class="col-sm-2 col-form-label">Author</label>
			<div class="col">
    			<input required type="text" name="author"class="form-control" id="inputAuthor" placeholder="Author" value="<%= book.author %>">
			</div>	
  		</div>
		<% } %>
		<% if(editing != 'ebooks') { %>
		<div class="form-group row">
    		<label for="inputPrice" class="col-sm-2 col-form-label">Price</label>
			<div class="col">
    			<input required type="text" name= "price" class="form-control" id="inputPrice" placeholder="Price" value="<%= book.price %>">
			 </div>
  		</div>
		<% } %>
		<div class="form-group row">
			<label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
    		<div class="col">
        		<textarea required class="form-control" name= "description" id="InputDescription" placeholder="Description"><%= book.description %></textarea>
        	</div>
  		</div>
		<% if(editing != 'ebooks') { %>
		<div class="form-group row">
    		<label for="inputImage" class="col-sm-2 col-form-label">Image</label>
			<div class="col">
				<div class="col-lg-6" style="margin-bottom: 50px;">
					<img src="<%= book.image %>" alt="..." class="img-thumbnail" style="height:200px; margin-bottom: 5px;">
				</div>
    			<input required type="file" name = "image" class="form-control-file" id="inputImage" placeholder="Image" accept="image/*">
			 </div>
  		</div>
		<% } else { %>
		<div class="form-group row">
    		<label for="inputImage" class="col-sm-2 col-form-label">File</label>
			<div class="col">
				<div class="col-lg-6" style="margin-bottom: 50px;">
					<iframe src="https://drive.google.com/file/d/<%= book.file_id %>/preview" width height style="height:200px; margin-bottom: 5px;"></iframe>
				</div>
    			<input required type="file" name = "pdf_file" class="form-control-file" id="inputImage" placeholder="Image" accept="application/pdf,application/vnd.ms-excel">
			 </div>
  		</div>
		<% } %>
		<p style="font-size: 12px;">
			<i class="fa fa-exclamation-triangle" style="color:red;"></i> <strong>Please Note:</strong> Clicking the submit button will send your changed entry about the product to our team. It will be removed from the website currently and will be re-uploaded on the website after the verification of the details provided is done.
		</p>
		<button type="submit" class="btn btn-lg btn-primary" style="margin: 3px 42%">Submit</button>
    </form>
</div>

